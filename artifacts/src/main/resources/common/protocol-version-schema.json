{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "title": "VersionSchema",
    "type": "object",
    "allOf": [
        {
            "$ref": "#/definitions/Version"
        }
    ],
    "$id": "https://w3id.org/dspace/2024/1/common/version-schema.json",
    "definitions": {
        "Version": {
            "type": "object",
            "properties": {
                "protocolVersions": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "version": {
                                "type": "string"
                            },
                            "path": {
                                "type": "string"
                            }
                        },
                        "required": ["version", "path"]
                    },
                    "minItems": 1
                }
            },
            "required": ["protocolVersions"]
        }
    }
}