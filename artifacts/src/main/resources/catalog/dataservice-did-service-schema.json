{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "DataServiceDidServiceSchema",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/definitions/DataServiceDidService"
    }
  ],
  "$id": "https://w3id.org/dspace/2025/1/catalog/dataservice-did-service-schema.json",
  "definitions": {
    "DataServiceDidService": {
      "type": "object",
      "properties": {
        "@context": {
          "allOf": [
            {
              "$ref": "https://w3id.org/dspace/2025/1/common/context-schema.json"
            },
            {
              "type": "array",
              "contains": {
                "type": "string",
                "const": "https://www.w3.org/ns/did/v1"
              }
            }
          ]
        },
        "type": {
          "type": "string",
          "const": "DataService"
        },
        "id": {
          "type": "string"
        },
        "serviceEndpoint": {
          "type": "string",
          "pattern": "https?://.*?/catalog$"
        }
      },
      "required": [
        "id",
        "type",
        "serviceEndpoint"
      ]
    }
  }
}
