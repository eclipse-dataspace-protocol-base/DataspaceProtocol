          "type": "string",
          "const": "DataAddress"
        },
        "endpointType": {
          "type": "string"
        },
        "endpoint": {
          "type": "string"
        },
        "endpointProperties": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/EndpointProperty"
          },
          "minItems": 1
        }
      },
      "required": [
        "@type",
        "endpointType",
        "endpoint"
      ]
    },
    "EndpointProperty": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "const": "EndpointProperty"
        },
        "name": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
